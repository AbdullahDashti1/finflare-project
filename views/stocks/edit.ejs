<!DOCTYPE html>
<html>
<head>
    <title>Edit Stock</title>
</head>
<body>
    <h1>Edit Stock</h1>

    <form action="/stocks/<%= stock._id %>?_method=PUT" method="POST">

        <label>Select Stock:</label>
        <select name="symbol" required>
            <% stocks.forEach(s => { %>
                <option value="<%= s.symbol %>" <%= s.symbol === stock.symbol ? 'selected="selected"' : '' %>>
                    <%= s.symbol %> - <%= s.name %> ($<%= s.price %>)
                </option>
            <% }) %>
        </select>

        <label>Shares:</label>
        <input type="number" name="shares" value="<%= stock.shares %>" min="1" required>

        <button type="submit">Update</button>
    </form>

    <a href="/stocks">Back to Portfolio</a>
</body>
</html>
