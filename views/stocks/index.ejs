<!DOCTYPE html>
<html>

<head>
    <title>Stock Portfolio</title>
</head>

<body>
    <h1>Available Stocks</h1>
    <ul>
        <% stocks.forEach(stock=> { %>
            <li>
                <strong>
                    <%= stock.symbol %>
                </strong> - <%= stock.name %> - $<%= stock.price %>
                        (<%= stock.shares %> shares available)
            </li>
            <% }) %>
    </ul>

    <a href="/stocks/new">Buy a Stock</a>

    <h1>Your Purchased Stocks</h1>
    <div class="stocks-container">
        <% if (userStocks.length===0) { %>
            <p>You haven't purchased any stocks yet.</p>
            <% } %>
                <% userStocks.forEach(stock=> { %>
                    <div class="card">
                        <h2><a href="/stocks/<%= stock._id %>">
                                <%= stock.symbol %>
                            </a></h2>
                        <p><strong>Company:</strong>
                            <%= stock.name %>
                        </p>
                        <p><strong>Shares:</strong>
                            <%= stock.shares %>
                        </p>
                        <p><strong>Price per Share:</strong> $<%= stock.price %>
                        </p>
                        <p><strong>Total Invested:</strong> $<%= stock.shares * stock.price %>
                        </p> 
                    </div>
                    <% }) %>
    </div>
</body>

</html>