<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/portfoliopage.css">
    <title>Stock Portfolio</title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>

        <h1 class="section-title">Earnings</h1>

        <h2 class="earnings">
            $<span id="earnings" data-base="<%= userEarnings || 0 %>">
                <%= userEarnings || 0 %>
            </span>
        </h2>

        <h1 class="section-title">Purchased Stocks</h1>
        <div class="stocks-container">
            <% if (userStocks.length===0) { %>
                <p class="no-stocks">You haven't purchased any stocks yet.</p>
                <% } else { %>
                    <% userStocks.forEach(stock=> { %>
                        <div class="card stock-card">
                            <h2 class="stock-symbol">
                                <%= stock.symbol %>
                            </h2>
                            <p><strong>Company:</strong>
                                <%= stock.name %>
                            </p>
                            <p><strong>Shares:</strong>
                                <%= stock.shares %>
                            </p>
                            <p><strong>Price per Share:</strong> $<%= stock.price %>
                            </p>
                            <p><strong>Total Invested:</strong> $<%= (stock.shares * stock.price).toFixed(2) %>
                            </p>

                            <form action="/stocks/<%= stock._id %>?_method=DELETE" method="POST" class="inline-form">
                                <button type="submit" class="btn btn-delete">Delete</button>
                            </form>
                            <a href="/stocks/<%= stock._id %>/edit" class="btn btn-edit">Edit</a>
                        </div>
                        <% }) %>
                            <% } %>
        </div>

        <h1 class="section-title">Available Stocks</h1>
        <ul class="stock-list">
            <% stocks.forEach(stock=> { %>
                <li class="stock-item">
                    <strong>
                        <%= stock.symbol %>
                    </strong> - <%= stock.name %> - $<%= stock.price %> - (<%= stock.shares %> shares available)
                </li>
                <% }) %>
        </ul>

        <a href="/stocks/new" class="btn btn-buy">Buy a Stock</a>

        <script>
            const earningsElement = document.getElementById('earnings');
            let earnings = Number(earningsElement.dataset.base);

            function updateEarnings() {
                const change = (Math.random() * 50 - 20);
                earnings = Math.round((earnings + change) * 100) / 100;
                earningsElement.textContent = earnings;
            }
            setInterval(updateEarnings, 3000);
        </script>
</body>

</html>